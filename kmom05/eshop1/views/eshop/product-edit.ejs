<%- include("header", {title: title}); %>

<h1>Uppdatera produkt</h1>

<pre><%= JSON.stringify(produkt[0], null, 4) %></pre>

<pre><%= produkt[0].id %></pre>

<form class="label-left" method="post" action="/update">
    <fieldset>
        <legend>Redigera produkt</legend>
        <p>
            <input type="hidden" id="f_id" name="f_id" value="<%= produkt.id %>">
            <label for="namn">Ben√§mning</label>
            <input id="namn" type="text" name="namn" value="<%= produkt[0].benamning %>">
        </p>
        <p>
            <label for="beskrivning">Beskrivning</label>
            <input id="beskrivning" type="text" name="beskrivning" value="<%= produkt[0].beskrivning %>">
        </p>
        <p>
            <label for="pris">Pris</label>
            <input id="pris" type="text" name="pris" value="<%= produkt[0].pris %>">
        </p>
        <p>
            <label for="stock">Lagerantal</label>
            <input id="stock" type="number" name="stock" value="<%= produkt[0].antal %>">
        </p>
        <p>
            <input type="submit" name="create" value="Uppdatera">
        </p>
    </fieldset>
</form>

<%- include("footer"); %>
